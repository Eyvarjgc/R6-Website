---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<link rel="icon" href="/img/r6sLogo.jpg">
	</head>

	<body>
		<slot />
	</body>

</html>



<style is:global>
	body{
		background-image: url('/img/defaultBg.jpg');
	}
	@font-face {
		font-family: Rainbow;
		src: url('../../public/fonts/Rainbow.ttf');
	}
	.hero{
		background: url('/img/OperatorsBg.jpg');
		
		width: 100%;
		height: 130vh;
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
		font-family: Rainbow;
		-webkit-mask-image: linear-gradient( #000 85%, transparent);
		mask-image: linear-gradient(#000 75%, transparent);
	}

	.News{
		
		font-family: Rainbow;
		width: 100%;
		height: max-content;
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
		text-align: center;
		color: white;
	}

	.Maps{
		font-family: Rainbow;
		width: 100%;
		height: max-content;
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
		text-align: center;
		color: white;
	}
	.LayerMaps{
		background-image: url('/img/bg1.png');
		    -webkit-mask-image: linear-gradient(transparent, #000 15%);
				mask-image: linear-gradient(transparent, #000 15%);

		position: absolute;
		width: 100vw;
		left: 0;
		bottom: 0;
		background-repeat: no-repeat;
	}
	.seasons{
		background-image: url('/img/bg2.jpg');
		font-family: Rainbow;
		width: 100%;
		height: max-content;
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
		text-align: center;
		color: white;
	}

	.operators{
		background-image: url('/img/bg2.jpg');
		font-family: Rainbow;
		width: 100%;
		height: max-content;
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
		text-align: center;
		color: white;
	}
	
	/* NAVBAR */
	.navBar ul li a{
		position: relative;
		transition: 1s all ease;
		padding: 5px;
	}
	.navBar ul li a::after{
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		background:linear-gradient(360deg, rgba(0, 255, 255, 0.614), rgba(0, 0, 0, 0.107)  50%) ;
		transition: all 0.2s ease;
		width: 100%;
		height: 1px;
		visibility: hidden;
	}
	.navBar li a:hover::after{
		height: 100%;
		visibility: visible;
		width: 100%;
	}

	.mobilBar li a{
		display: block;
		border-bottom: 1.5px solid rgb(43, 43, 43);
	}

	.displayMenu{
		display: none;
		transition: all 1s ease;
	}

	.showMenu{
		display: inline-flex;
	}



</style>
