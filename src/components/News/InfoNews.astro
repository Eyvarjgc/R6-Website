---
interface Props {
  img: string,
  title: string,
  date: string,
  description:string,

}
const {img, title,date,description} = Astro.props
---
 
<div class="lg:flex lg:items-center lg:justify-center">

    <img src={img} alt="" class="border-yellow-300 border rounded-sm relative lg:w-[50%] lg:h-[300px] lg:skew-y-[10deg] lg:my-8">

  <div class="lg:text-start lg:pl-12 lg:w-[40%]" >
      <h1 class="text-3xl lg:text-5xl my-4 lg:tracking-wider">{title}</h1>
      <p class="bg-black text-2xl  tracking-wide   flex mx-auto my-0 " style="border-bottom-right-radius: 35px;">{date}</p>
      <p class="text-xl tracking-tight font-mono my-2">{description}</p>
    
    <button class="bg-cyan-800  px-4 py-1 text-black text-2xl info relative">Mas info</button>
    
 
  </div>

</div>

  <div class="inline-flex gap-4 items-center justify-center my-4 flex-col w-full lg:flex-row lg:my-24 lg:text-xl">
    <button class="bg-black border-yellow-200 border-2 border-opacity-20 w-full news relative">Y9S3 STREAMER CHARMS</button>
    <button class="bg-black border-yellow-200  border-opacity-20 border-2 w-full news relative">SIEGE INTELS: COMPETITIVE PLAYLIST UPDATE</button>
    <button class="bg-black border-yellow-200 border-opacity-20   border-2 w-full news relative">BATTLE PASS DE OPERATION TWIN SHELLS - DEL 10 DE SEPTIEMBRE AL 2 DE DICIEMBRE</button>
  
  </div>




<style>
  .info::after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 10%;
    background:linear-gradient(360deg, rgba(0, 255, 255, 0.963), rgba(0, 0, 0, 0.107)  50%) ;

    transition: all 0.3s ease;
  }
  .info:hover:after{
    height: 100%;
  }
  .news::before{
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    transition: all 0.8s ease;
    width: 4px;
    height: 100%;
  }
  .news::after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    transition: all 0.8s ease;
    width: 5%;
    height: 100%;
  }
  .news:hover:after{
    background-color: rgba(255, 255, 0, 0.16);
    width: 100%;
    color: black;
  }
  .news:hover:before{
    background-color: rgba(255, 255, 0, 0.16);
    width: 100%;
    color: black;
  }

</style>