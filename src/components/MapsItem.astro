---
interface Props {
  img: string, 
  name: string,
  position: string
}

const {img, name,position} = Astro.props
---


<div class={`flex flex-col w-fit bg-white col-start-5 ${position}`}>

  <img src={img} alt="" class="w-fit h-full ">

  <span class=" text-black text-4xl   ">
    <p class="text-center  justify-center items-center mx-auto my-0 tracking-widest capitalize">{name}</p>
  </span>
</div>
